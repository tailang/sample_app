<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<!-- 在上面的代码中渲染的局部图名为shared/error_messages,这里用到了rails的
			一个约定：如果局部试图要在过个控制器中使用，则要把它存放在专门的shared目录下 -->
		<%= f.label "用户名" %>
		<%= f.text_field :name %>

		<%= f.label "邮箱" %>
		<%= f.text_field :email %>

		<%= f.label "密码" %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation,"确认密码" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "创建用户", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>


