<% provide(:title, @title) %>
<div class="row">
	<aside class="span4">
		<section>
			<%= gravatar_for @user %>
			 <% user_temp=@user.name %>
			<span> <%= link_to user_temp, @user %></span>
			<span><b>话语:</b> <%= @user.microposts.count %></span>
		</section>
		<section>
			<%= render 'shared/stats' %>
			<% if @users.any? %>
				<div class="user_avatars">
					<% @users.each do |user| %>
					  <%= link_to gravatar_for(user,size: 30),user %>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>
	<div class="span8">
		 <!-- <h3> <%= @title %></h3> -->
		 <h3><%= @title == "Following"? "关注列表" : "粉丝列表" %></h3>
		  <% if @users.any? %>
		  <ul class="users">
		  	<%= render @users %>
		  </ul>
		  <%= will_paginate %>
		  <% end %>
	</div>
</div>